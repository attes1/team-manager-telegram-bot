# Telegram Bot
BOT_TOKEN=your_bot_token_here

# Group IDs
TEAM_GROUP_ID=-100xxxxxxxxxx
PUBLIC_GROUP_ID=-100xxxxxxxxxx

# Admin User IDs (comma-separated)
ADMIN_IDS=123456789,987654321

# Timezone
TZ=Europe/Helsinki

# Database
DB_PATH=./data/bot.db

# ---- All values below are optional (defaults shown) ----

# Language (fi or en)
DEFAULT_LANGUAGE=fi

# Poll schedule
DEFAULT_POLL_DAY=sun
DEFAULT_POLL_TIME=14:00

# Poll options (which days and times to show in poll)
DEFAULT_POLL_DAYS=mon,tue,wed,thu,fri,sat,sun
DEFAULT_POLL_TIMES=19,20,21

# Poll cutoff (after this time, poll targets next week)
DEFAULT_POLL_CUTOFF_DAY=thu
DEFAULT_POLL_CUTOFF_TIME=10:00

# Poll reminder schedule (mode: ping, quiet, off)
DEFAULT_POLL_REMINDER_DAY=mon
DEFAULT_POLL_REMINDER_TIME=18:00
DEFAULT_POLL_REMINDER_MODE=quiet

# Match defaults
DEFAULT_MATCH_DAY=sun
DEFAULT_MATCH_TIME=20:00

# Match day reminder mode (ping, quiet, off)
DEFAULT_MATCH_DAY_REMINDER_MODE=quiet
DEFAULT_MATCH_DAY_REMINDER_TIME=18:00

# Team size for lineup
DEFAULT_LINEUP_SIZE=5
